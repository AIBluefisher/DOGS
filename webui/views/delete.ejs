<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Manage 3D Gaussian Splatting models">
    <title>Manage Models - 3DGS Viewer</title>
    
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="./static/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    
    <!-- Custom Styles -->
    <style>
        :root {
            --primary-color: #6366f1;
            --primary-dark: #4f46e5;
            --secondary-color: #10b981;
            --danger-color: #ef4444;
            --warning-color: #f59e0b;
            --dark-bg: #111827;
            --light-bg: #f9fafb;
            --text-primary: #1f2937;
            --text-secondary: #6b7280;
            --card-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
            --hover-shadow: 0 20px 40px -10px rgba(0, 0, 0, 0.15);
            --transition: all 0.3s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: #f9fafb;
            min-height: 100vh;
        }

        /* Navigation */
        .navbar {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(0, 0, 0, 0.1);
            padding: 1rem 0;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .navbar-container {
            display: grid;
            grid-template-columns: 1fr auto 1fr;
            align-items: center;
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 2rem;
        }

        .logo {
            justify-self: center;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            text-decoration: none;
            color: var(--text-primary);
            font-weight: 700;
            font-size: 1.5rem;
        }

        .logo img {
            height: 40px;
            width: 40px;
            object-fit: contain;
        }

        .nav-links {
            justify-self: end;
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .nav-link {
            text-decoration: none;
            color: var(--text-secondary);
            font-weight: 500;
            transition: var(--transition);
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
        }

        .nav-link:hover {
            color: var(--primary-color);
            background: rgba(99, 102, 241, 0.1);
        }

        .btn {
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            font-weight: 600;
            text-decoration: none;
            transition: var(--transition);
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            border: none;
            cursor: pointer;
            font-family: 'Inter', sans-serif;
            font-size: 0.875rem;
        }

        .btn-primary {
            background: var(--primary-color);
            color: white;
        }

        .btn-primary:hover {
            background: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: var(--hover-shadow);
        }

        .btn-danger {
            background: var(--danger-color);
            color: white;
        }

        .btn-danger:hover {
            background: #dc2626;
            transform: translateY(-2px);
            box-shadow: 0 20px 40px -10px rgba(239, 68, 68, 0.15);
        }

        .btn-sm {
            padding: 0.5rem 1rem;
            font-size: 0.75rem;
        }

        /* User Menu */
        .user-menu {
            position: relative;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: var(--primary-color);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
        }

        .user-avatar:hover {
            background: var(--primary-dark);
        }

        .dropdown-menu {
            position: absolute;
            top: 100%;
            right: 0;
            background: white;
            border-radius: 0.75rem;
            box-shadow: var(--hover-shadow);
            padding: 0.5rem;
            min-width: 200px;
            display: none;
            z-index: 1001;
        }

        .user-menu:hover .dropdown-menu {
            display: block;
        }

        .dropdown-item {
            display: block;
            padding: 0.75rem 1rem;
            color: var(--text-primary);
            text-decoration: none;
            border-radius: 0.5rem;
            transition: var(--transition);
        }

        .dropdown-item:hover {
            background: rgba(99, 102, 241, 0.1);
            color: var(--primary-color);
        }

        /* Hero Section */
        .hero {
            padding: 4rem 2rem;
            text-align: center;
            color: white;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            margin-bottom: 3rem;
        }

        .hero h1 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 1rem;
        }

        .hero p {
            font-size: 1.125rem;
            opacity: 0.9;
            max-width: 600px;
            margin: 0 auto;
        }

        /* Manage Container */
        .manage-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 2rem 4rem;
        }

        .manage-card {
            background: white;
            border-radius: 1.5rem;
            box-shadow: var(--card-shadow);
            padding: 2.5rem;
            margin-top: -2rem;
            position: relative;
            z-index: 1;
        }

        .manage-header {
            text-align: center;
            margin-bottom: 2.5rem;
        }

        .manage-header h2 {
            font-size: 1.875rem;
            color: var(--text-primary);
            margin-bottom: 0.75rem;
        }

        .manage-header p {
            color: var(--text-secondary);
            font-size: 1.125rem;
        }

        /* Models Table */
        .models-table-container {
            overflow-x: auto;
            border-radius: 1rem;
            border: 1px solid #e5e7eb;
            margin-bottom: 2rem;
        }

        .models-table {
            width: 100%;
            border-collapse: collapse;
            min-width: 800px;
        }

        .models-table thead {
            background: #f9fafb;
            border-bottom: 2px solid #e5e7eb;
        }

        .models-table th {
            padding: 1rem 1.5rem;
            text-align: left;
            font-weight: 600;
            color: var(--text-primary);
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .models-table tbody tr {
            border-bottom: 1px solid #f3f4f6;
            transition: var(--transition);
        }

        .models-table tbody tr:hover {
            background: #f9fafb;
        }

        .models-table td {
            padding: 1.25rem 1.5rem;
            color: var(--text-primary);
            vertical-align: middle;
        }

        .model-info {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .model-thumb {
            width: 60px;
            height: 60px;
            border-radius: 0.75rem;
            object-fit: cover;
            border: 1px solid #e5e7eb;
        }

        .model-details h4 {
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 0.25rem;
        }

        .model-details p {
            font-size: 0.875rem;
            color: var(--text-secondary);
        }

        .stars {
            display: flex;
            align-items: center;
            gap: 0.25rem;
            color: #f59e0b;
        }

        .date {
            color: var(--text-secondary);
            font-size: 0.875rem;
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            color: var(--text-secondary);
        }

        .empty-state i {
            font-size: 4rem;
            margin-bottom: 1rem;
            color: #d1d5db;
        }

        .empty-state h3 {
            color: var(--text-primary);
            margin-bottom: 0.5rem;
        }

        /* Pagination */
        .pagination-container {
            display: flex;
            justify-content: center;
            margin-top: 2rem;
        }

        .pagination {
            display: flex;
            list-style: none;
            gap: 0.5rem;
            align-items: center;
        }

        .page-item {
            margin: 0;
        }

        .page-link {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            min-width: 40px;
            height: 40px;
            padding: 0 0.75rem;
            border: 1px solid #d1d5db;
            border-radius: 0.5rem;
            background: white;
            color: #374151;
            text-decoration: none;
            font-weight: 500;
            font-size: 0.875rem;
            transition: var(--transition);
        }

        .page-link:hover:not(.active):not(:disabled) {
            background: #f3f4f6;
            border-color: #9ca3af;
            color: #111827;
        }

        .page-item.active .page-link {
            background: var(--primary-color);
            border-color: var(--primary-color);
            color: white;
            font-weight: 600;
        }

        .page-item.disabled .page-link {
            opacity: 0.5;
            cursor: not-allowed;
            background: #f9fafb;
            color: #9ca3af;
        }

        /* Modal */
        .modal-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
            z-index: 1002;
            align-items: center;
            justify-content: center;
        }

        .modal-content {
            background: white;
            border-radius: 1rem;
            padding: 2rem;
            max-width: 500px;
            width: 90%;
            box-shadow: var(--hover-shadow);
        }

        .modal-header {
            margin-bottom: 1.5rem;
        }

        .modal-header h3 {
            font-size: 1.25rem;
            color: var(--text-primary);
        }

        .modal-body {
            margin-bottom: 2rem;
        }

        .modal-body p {
            color: var(--text-secondary);
            line-height: 1.6;
        }

        .modal-footer {
            display: flex;
            justify-content: flex-end;
            gap: 1rem;
        }

        /* Messages */
        .message {
            padding: 1rem;
            border-radius: 0.75rem;
            margin: 1rem 0;
            display: none;
            animation: fadeIn 0.3s ease;
        }

        .message-success {
            background: #d1fae5;
            color: #065f46;
            border: 1px solid #a7f3d0;
        }

        .message-error {
            background: #fee2e2;
            color: #991b1b;
            border: 1px solid #fecaca;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Footer */
        footer {
            background: rgba(0, 0, 0, 0.8);
            color: rgba(255, 255, 255, 0.7);
            padding: 3rem 2rem;
            text-align: center;
            margin-top: 4rem;
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
        }

        .footer-links {
            display: flex;
            justify-content: center;
            gap: 2rem;
            margin-bottom: 2rem;
            flex-wrap: wrap;
        }

        .footer-links a {
            color: rgba(255, 255, 255, 0.7);
            text-decoration: none;
            transition: var(--transition);
        }

        .footer-links a:hover {
            color: white;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .navbar-container {
                padding: 0 1rem;
                grid-template-columns: auto 1fr;
            }
            
            .nav-links {
                display: none;
            }
            
            .hero {
                padding: 3rem 1rem;
            }
            
            .hero h1 {
                font-size: 2rem;
            }
            
            .manage-card {
                padding: 1.5rem;
                margin: -1rem 1rem 0;
            }
            
            .models-table-container {
                border-radius: 0.75rem;
            }
            
            .models-table th,
            .models-table td {
                padding: 0.75rem 1rem;
            }
            
            .model-info {
                flex-direction: column;
                align-items: flex-start;
                gap: 0.5rem;
            }
            
            .modal-content {
                width: 95%;
                padding: 1.5rem;
            }
        }
    </style>
</head>
<body>

    <nav class="navbar">
        <div class="navbar-container">
            <div></div>
            <a href="/" class="logo">
                <img src="./static/images/dogs.png" alt="3DGS Viewer Logo">
                <span>3DGS Viewer</span>
            </a>
            <div class="nav-links">
                <% if (!user) { %>
                    <a href="login" class="nav-link">Login</a>
                    <a href="/signup" class="btn btn-primary">Sign Up</a>
                <% } else { %>
                    <div class="user-menu">
                        <div class="user-avatar">
                            <%= user.username.charAt(0).toUpperCase() %>
                        </div>
                        <div class="dropdown-menu">
                            <span class="dropdown-item" style="font-weight: 600;">
                                <i class="fa fa-user"></i> <%= user.username %>
                            </span>
                            <hr style="margin: 0.5rem 0; border-color: rgba(0,0,0,0.1);">
                            <a href="#" class="dropdown-item">
                                <i class="fa fa-cog"></i> Settings
                            </a>
                            <a href="/upload" class="dropdown-item">
                                <i class="fa fa-upload"></i> Upload Model
                            </a>
                            <a href="/delete" class="dropdown-item">
                                <i class="fa fa-trash"></i> Manage Models
                            </a>
                            <hr style="margin: 0.5rem 0; border-color: rgba(0,0,0,0.1);">
                            <form action="/logout" method="post" style="margin: 0;">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button type="submit" class="dropdown-item" style="width: 100%; text-align: left; background: none; border: none; cursor: pointer;">
                                    <i class="fa fa-sign-out"></i> Sign Out
                                </button>
                            </form>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-content">
            <h1>Manage Your Models</h1>
            <p>View, manage, and delete your 3D Gaussian Splatting models</p>
        </div>
    </section>

    <!-- Manage Container -->
    <div class="manage-container">
        <div class="manage-card">
            <div class="manage-header">
                <h2>Your 3D Models</h2>
                <p>You have <%= models.length %> model(s) uploaded</p>
            </div>

            <% if (models && models.length > 0) { %>
                <!-- Models Table -->
                <div class="models-table-container">
                    <table class="models-table">
                        <thead>
                            <tr>
                                <th>Model</th>
                                <th>Date Uploaded</th>
                                <th>Stars</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% models.forEach((model) => { %>
                                <tr data-model-id="<%= model.id %>">
                                    <td>
                                        <div class="model-info">
                                            <% if (model.thumb_image_path) { %>
                                                <img src="<%= model.thumb_image_path %>" alt="<%= model.title %>" class="model-thumb">
                                            <% } else { %>
                                                <div class="model-thumb" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center; color: white;">
                                                    <i class="fa fa-cube"></i>
                                                </div>
                                            <% } %>
                                            <div class="model-details">
                                                <h4><%= model.title || 'Untitled Model' %></h4>
                                                <p>ID: <%= model.id %></p>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="date"><%= model.date %></td>
                                    <td>
                                        <div class="stars">
                                            <% for (let i = 0; i < 5; i++) { %>
                                                <% if (i < Math.floor(model.stars || 0)) { %>
                                                    <i class="fa fa-star"></i>
                                                <% } else { %>
                                                    <i class="fa fa-star-o"></i>
                                                <% } %>
                                            <% } %>
                                            <span style="margin-left: 0.5rem; color: var(--text-secondary); font-size: 0.875rem;">
                                                (<%= model.stars || 0 %>)
                                            </span>
                                        </div>
                                    </td>
                                    <td>
                                        <button class="btn btn-danger btn-sm delete-btn" data-model-id="<%= model.id %>" data-model-title="<%= model.title || 'Untitled Model' %>">
                                            <i class="fa fa-trash"></i> Delete
                                        </button>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <% 
                    const itemsPerPage = 8;
                    // Use the values passed from backend, or calculate if not provided
                    const totalPagesValue = totalPages || Math.ceil(row_count / itemsPerPage);
                    const currentPageValue = page || 1;
                %>
                
                <% if (totalPagesValue > 1) { %>
                    <div class="pagination-container">
                        <ul class="pagination">
                            <!-- Previous Page -->
                            <li class="page-item <%= currentPageValue === 1 ? 'disabled' : '' %>">
                                <a class="page-link" href="/delete?page=<%= currentPageValue - 1 %>" aria-label="Previous">
                                    <i class="fa fa-chevron-left"></i>
                                </a>
                            </li>

                            <!-- Page Numbers -->
                            <% 
                                let startPage = Math.max(1, currentPageValue - 2);
                                let endPage = Math.min(totalPagesValue, currentPageValue + 2);
                                
                                if (startPage > 1) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="/delete?page=1">1</a>
                                    </li>
                                    <% if (startPage > 2) { %>
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    <% }
                                }
                                
                                for (let i = startPage; i <= endPage; i++) { %>
                                    <li class="page-item <%= i === currentPageValue ? 'active' : '' %>">
                                        <a class="page-link" href="/delete?page=<%= i %>"><%= i %></a>
                                    </li>
                                <% }
                                
                                if (endPage < totalPagesValue) { 
                                    if (endPage < totalPagesValue - 1) { %>
                                        <li class="page-item disabled">
                                            <span class="page-link">...</span>
                                        </li>
                                    <% } %>
                                    <li class="page-item">
                                        <a class="page-link" href="/delete?page=<%= totalPagesValue %>"><%= totalPagesValue %></a>
                                    </li>
                                <% } %>

                            <!-- Next Page -->
                            <li class="page-item <%= currentPageValue === totalPagesValue ? 'disabled' : '' %>">
                                <a class="page-link" href="/delete?page=<%= currentPageValue + 1 %>" aria-label="Next">
                                    <i class="fa fa-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </div>
                <% } %>

            <% } else { %>
                <!-- Empty State -->
                <div class="empty-state">
                    <i class="fa fa-cube"></i>
                    <h3>No Models Found</h3>
                    <p>You haven't uploaded any models yet.</p>
                    <a href="/upload" class="btn btn-primary" style="margin-top: 1rem;">
                        <i class="fa fa-upload"></i> Upload Your First Model
                    </a>
                </div>
            <% } %>

            <!-- Success/Error Messages -->
            <div class="message" id="successMessage">
                <i class="fa fa-check-circle"></i> <span id="successText"></span>
            </div>

            <div class="message" id="errorMessage">
                <i class="fa fa-exclamation-circle"></i> <span id="errorText"></span>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal-overlay" id="deleteModal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Delete Model</h3>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong id="modelTitle"></strong>?</p>
                <p style="color: var(--danger-color); font-size: 0.875rem; margin-top: 0.5rem;">
                    <i class="fa fa-exclamation-triangle"></i> This action cannot be undone.
                </p>
            </div>
            <div class="modal-footer">
                <button class="btn" id="cancelDelete">Cancel</button>
                <button class="btn btn-danger" id="confirmDelete">Delete</button>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <div class="footer-content">
            <div class="footer-links">
                <a href="#">About</a>
                <a href="#">Documentation</a>
                <a href="#">API</a>
                <a href="#">Contact</a>
            </div>
            <p style="margin-bottom: 1rem;">&copy; 2024 3DGS Viewer. All rights reserved.</p>
            <p style="font-size: 0.875rem; opacity: 0.6;">Powered by 3D Gaussian Splatting technology</p>
        </div>
    </footer>

    <!-- Scripts -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const deleteButtons = document.querySelectorAll('.delete-btn');
            const deleteModal = document.getElementById('deleteModal');
            const cancelDeleteBtn = document.getElementById('cancelDelete');
            const confirmDeleteBtn = document.getElementById('confirmDelete');
            const modelTitle = document.getElementById('modelTitle');
            const successMessage = document.getElementById('successMessage');
            const errorMessage = document.getElementById('errorMessage');
            const successText = document.getElementById('successText');
            const errorText = document.getElementById('errorText');

            let modelToDelete = null;

            // Delete button click
            deleteButtons.forEach(button => {
                button.addEventListener('click', function() {
                    modelToDelete = {
                        id: this.dataset.modelId,
                        title: this.dataset.modelTitle
                    };
                    modelTitle.textContent = modelToDelete.title;
                    deleteModal.style.display = 'flex';
                });
            });

            // Cancel delete
            cancelDeleteBtn.addEventListener('click', function() {
                deleteModal.style.display = 'none';
                modelToDelete = null;
            });

            // Confirm delete
            confirmDeleteBtn.addEventListener('click', async function() {
                if (!modelToDelete) return;

                // Disable button and show loading
                confirmDeleteBtn.disabled = true;
                confirmDeleteBtn.innerHTML = '<i class="fa fa-spinner fa-spin"></i> Deleting...';

                try {
                    const response = await fetch('/delete', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'X-CSRF-Token': '<%= csrfToken %>'
                        },
                        body: JSON.stringify({
                            row_data: [modelToDelete.id]
                        })
                    });

                    if (!response.ok) {
                        throw new Error('Delete failed');
                    }

                    const data = await response.json();
                    
                    // Show success message
                    showMessage('success', data.message || 'Model deleted successfully!');
                    
                    // Close modal
                    deleteModal.style.display = 'none';
                    
                    // Remove the row from the table
                    const row = document.querySelector(`tr[data-model-id="${modelToDelete.id}"]`);
                    if (row) {
                        row.style.transition = 'all 0.3s ease';
                        row.style.opacity = '0';
                        row.style.transform = 'translateX(-20px)';
                        
                        setTimeout(() => {
                            row.remove();
                            
                            // Check if table is empty
                            const tbody = document.querySelector('.models-table tbody');
                            if (tbody.children.length === 0) {
                                location.reload();
                            }
                        }, 300);
                    }
                    
                } catch (error) {
                    console.error('Delete error:', error);
                    showMessage('error', 'Failed to delete model. Please try again.');
                } finally {
                    // Reset button
                    confirmDeleteBtn.disabled = false;
                    confirmDeleteBtn.innerHTML = 'Delete';
                    modelToDelete = null;
                }
            });

            // Close modal when clicking outside
            deleteModal.addEventListener('click', function(e) {
                if (e.target === this) {
                    deleteModal.style.display = 'none';
                    modelToDelete = null;
                }
            });

            // Show message function
            function showMessage(type, text) {
                // Hide all messages first
                successMessage.style.display = 'none';
                errorMessage.style.display = 'none';
                
                if (type === 'success') {
                    successText.textContent = text;
                    successMessage.style.display = 'block';
                } else {
                    errorText.textContent = text;
                    errorMessage.style.display = 'block';
                }
                
                // Auto hide after 5 seconds
                setTimeout(() => {
                    if (type === 'success') {
                        successMessage.style.display = 'none';
                    } else {
                        errorMessage.style.display = 'none';
                    }
                }, 5000);
            }

            // Initialize pagination
            const currentPage = <%= page || 1 %>;
            const totalPages = <%= totalPages || 1 %>;
            
            // Update page info if needed
            if (totalPages > 0) {
                console.log(`Page ${currentPage} of ${totalPages}`);
            }
        });
    </script>
