<!-- Avatar Upload Form - SIMPLIFIED -->
<div class="avatar-section">
    <div class="avatar-preview">
        <% if (user.avatar_path) { %>
            <img src="<%= user.avatar_path %>" alt="<%= user.full_name || user.username %>" 
                 style="width: 100%; height: 100%; border-radius: 50%; object-fit: cover;">
        <% } else if (user.email && gravatar) { %>
            <img src="<%= gravatar.getGravatarUrl(user.email, 150, 'identicon') %>" 
                 alt="<%= user.full_name || user.username %>"
                 style="width: 100%; height: 100%; border-radius: 50%; object-fit: cover;">
        <% } else { %>
            <div style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; 
                       background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; font-size: 3rem; font-weight: 600;">
                <%= user.username.charAt(0).toUpperCase() %>
            </div>
        <% } %>
    </div>
    
    <h3 style="margin-bottom: 0.5rem;"><%= user.full_name || user.username %></h3>
    <p style="color: var(--text-secondary); font-size: 0.875rem;">@<%= user.username %></p>
    
    <!-- Avatar Upload Form - No CSRF token needed since we're skipping it -->
    <form action="/profile/avatar" method="post" enctype="multipart/form-data" id="avatarForm">
        <!-- NO CSRF TOKEN HERE since we're skipping CSRF for this route -->
        <input type="file" id="avatarInput" name="avatar" accept="image/*" 
            onchange="uploadAvatar(this)" style="display: none;">
        <button type="button" class="btn btn-outline btn-sm" onclick="document.getElementById('avatarInput').click()" 
                style="margin-top: 1rem;">
            <i class="fa fa-camera"></i> Change Avatar
        </button>
    </form>

    <% if (user.avatar_path) { %>
        <!-- DELETE form still needs CSRF token -->
        <form action="/profile/avatar/delete" method="post" style="margin-top: 0.5rem;">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button type="submit" class="btn btn-danger btn-sm" 
                    onclick="return confirm('Are you sure you want to remove your avatar?')">
                <i class="fa fa-trash"></i> Remove Avatar
            </button>
        </form>
    <% } %>
</div>

<script>
function uploadAvatar(input) {
    if (input.files && input.files[0]) {
        // Show preview
        const reader = new FileReader();
        reader.onload = function(e) {
            const avatarPreview = document.querySelector('.avatar-preview');
            avatarPreview.innerHTML = `<img src="${e.target.result}" alt="Preview" style="width: 100%; height: 100%; border-radius: 50%; object-fit: cover;">`;
        };
        reader.readAsDataURL(input.files[0]);
        
        // Submit the form
        document.getElementById('avatarForm').submit();
    }
}
</script>

